extends layout

block content
  .col-6
    form(method="post" action="saveDiary")
      .formGroup(align="middle")
      hr
      | Write down what you are thinking...
      hr
      label Title
        input.form-control(type="text" name="title" placeholder="Title")
      br
      textarea(name="content" rows="50" cols="60" )
      br
      input(type="checkbox")
      | set private
      br
      input(type="submit")
  hr
  ul
    each d in diary
      li
        | #{d.title} -- #{d.content}
